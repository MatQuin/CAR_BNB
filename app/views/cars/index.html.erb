<%# la y aura des cards cliquables avec les photos des voitures %>
<div class="container mt-5">

  <h1>Rent a car</h1>
  <p>what car are you looking for ? </p>
    <div class="row">
      <div class="col-6 ">

        <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a car model"%>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>

        <div class = "car-show-card">
            <% if @cars.any? %>
              <% @cars.each do |car| %>
                  <div class="card-product">
                    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
                    <div class="card-product-infos">
                      <%= link_to car.trademark, car_path(car) %>
                      <p><%= car.price %></p>
                    </div>
                  </div>
                <% end %>
            <% else %>
              <em>Sorry, no cars found.</em>
            <% end %>
        </div>
      </div>


    <div class="col-6">
      <div style="width: 100%; height: 400px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

</div>
