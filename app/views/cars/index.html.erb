<div class="container mt-5">
  <h1>rent a car</h1>

  <ul>
    <% @cars.each do |car| %>
      <li><%= link_to car.trademark, car_path(car) %></li>
    <% end %>
  </ul>

</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
