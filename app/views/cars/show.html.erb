<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="car-show-card">
        <h1><%= @car.trademark %></h1>
        <p class="car-show-price"><%= @car.price %></p>
      </div>
      <div class="car-show-card">
        <h3>A bit more about this car...</h3>
        <p><%= @car.year %></p>
        <p><%= @car.km %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="car-show-card">
        <h5>Book this car!</h5>
          <%= render "bookings/new" %>
      </div>
            <div class="car-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
    </div>
  </div>
</div>
